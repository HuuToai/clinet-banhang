          <div>
            <h4 class="header-title mb-3">Thêm mới Thương Hiệu</h4>
          </div>
        </div>
      </div>
      <!-- end row -->

      <!-- row -->
      <div class="row">
        <div class="col-lg-12">
          <form action="/admin/brand/store" method="POST" enctype="multipart/form-data" class="form-horizontal">
            <div class="form-group has-danger">
              <label class="form-label mt-4" for="inputInvalid">Tên Thương hiệu</label>
              <input type="text" name="name" placeholder="Nhập tên Thương hiệu" class="form-control">
              {{#if errors }}
              <div class="invalid-feedback">{{errors.name.msg}}</div>
              {{/if}}
            </div>
            <div class="form-group">
              <label for="eexampleSelect12">Ảnh Thương hiệu</label>
              <input name="image" type="file" class="filestyle" id="eexampleSelect12 ">
              {{#if errors }}
              <div class="invalid-feedback">{{errors.image.msg}}</div>
              {{/if}}
            </div>
            <div class="form-group row">
              <label for="example-textarea">
                Mô tả Thương hiệu
              </label>
              <textarea name="description" rows="5" id="example-textarea"></textarea>
              {{#if errors }}
              <div class="invalid-feedback">{{errors.description.msg}}</div>
              {{/if}}
            </div>
            <div class="form-group">
              <label for="exampleSelect1">Tình trạng</label>
              <select class="form-control" name="status" id="eexampleSelect1">
                <option value="1">Kích hoạt</option>
                <option value="0">Chưa Kích Hoạt</option>
              </select>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-primary" type="submit">Thêm mới Thương hiệu</button>
            </div>
          </form>
