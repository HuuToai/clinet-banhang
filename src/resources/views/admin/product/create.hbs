<div class="content-page">
  <div class="content">

    <!-- Start container-fluid -->
    <div class="container-fluid">

      <!-- start  -->
      <div class="row">
        <div class="col-12">
          <div>
            <h4 class="header-title mb-3">Thêm mới Sản Phẩm</h4>
          </div>
        </div>
      </div>
      <!-- end row -->

      <!-- row -->
      <div class="row">
        <div class="col-lg-12">
          <form action="/admin/product/store" method="POST" enctype="multipart/form-data" class="form-horizontal">
            <div class="form-group row">
              <label for="eexampleSelect3" class="col-md-2 col-form-label">Tên Sản Phẩm</label>
              <div class="col-md-10">
                <input id="eexampleSelect3" type="text" class="form-control" data-validation="length"
                  data-validation-length="min10" data-validation-error-msg="Làm ơn nhập " class="form-control"
                  onkeyup="ChangeToSlug();" placeholder="Nhập tên Sản Phẩm" name="name" />
              </div>
            </div>
            <div class="form-group row">
              <label for="eexampleSelect5" class="col-md-2 col-form-label"> Giá nhập Sản Phẩm</label>
              <div class="col-md-10">
                <input id="eexampleSelect5" type="number" class="form-control" placeholder="Nhập giá nhập Sản Phẩm"
                  name="price_in" />
              </div>
            </div>
            <div class="form-group row">
              <label for="eexampleSelect5" class="col-md-2 col-form-label"> Giá bán Sản Phẩm</label>
              <div class="col-md-10">
                <input id="eexampleSelect5" type="number" class="form-control" placeholder="Nhập giá bán của Sản Phẩm"
                  name="price" />
              </div>
            </div>

            <div class="form-group row">
              <label for="eexampleSelect6" class="col-md-2 col-form-label">Số lượng Sản Phẩm</label>
              <div class="col-md-10">
                <input id="eexampleSelect6" type="number" class="form-control" placeholder="Nhập số lượng Sản Phẩm"
                  name="quantity" />
              </div>
            </div>
            <div class="form-group">
              <label for="eexampleSelect12">Ảnh Sản Phẩm</label>
              <input name="image" type="file" value="{{formData.name}}" class="filestyle" id="eexampleSelect12 ">
            </div>
            <div class="form-group row">
              <label for="example-textarea">
                Mô tả Sản Phẩm
              </label>
              <div>
                <textarea name="description" class="form-control" rows="5" id="example-textarea"></textarea>
              </div>
            </div>
            <fieldset class="form-group">
              <label for="exampleSelect1">Tình trạng</label>
              <select class="form-control" name="status" id="eexampleSelect1">
                <option value="1">Kích hoạt</option>
                <option value="0">Chưa Kích Hoạt</option>
              </select>
            </fieldset>
            <fieldset class="form-group">
              <label for="exampleSelect1">Thương Hiệu</label>
              <select class="form-control" name="brand_id" id="eexampleSelect1">
                {{#each brands }}
                <option value="{{this.id}}">
                  {{this.name}}
                </option>
                {{/each}}
              </select>
            </fieldset>
            <fieldset class="form-group">
              <label for="exampleSelect1">Danh Mục</label>
              <select class="form-control" name="category_id" id="eexampleSelect1">
                {{#each categories }}
                <option value="{{this.id}}">
                  {{this.name}}
                </option>
                {{/each}}
              </select>
            </fieldset>
            <button class="btn btn-primary" type="submit">Thêm mới Sản Phẩm</button>
        </div>
        </form>
      </div>

    </div>
    <!-- end row -->
  </div>
  <!-- end container-fluid -->
</div>
<!-- end content -->

</div>
<!-- END content-page -->