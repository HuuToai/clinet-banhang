<div class="content-page">
    <div class="content">
        <!-- Start container-fluid -->
        <div class="container-fluid">
            <!-- row -->
            <div class="row">
                <div class="col-lg-12">
                    <h3>Cập nhật Thể Loại</h3>
                    <form method="post" action="/admin/category/{{categories.id}}?_method=PATCH"
                        enctype="multipart/form-data">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            <input type="text" id="slug" value="{{categories.name}}" name="name" class="form-control"
                                onkeyup="ChangeToSlug();" placeholder="Tên Thể Loại">
                        </div>
                        <input hidden type="text" id="convert_slug" value="{{categories.slug}}" name="slug"
                            class="form-control" placeholder="Slug">
                        <div class="form-group">
                            <label for="eexampleSelect12">Ảnh Thể Loại</label>
                            <input name="image" type="file" class="filestyle" id="eexampleSelect12 ">
                            <img src="{{ window.location.origin }}/uploads/categories/{{categories.image}}" width="80px"
                                height="80px" alt="Ảnh Thể Loại" title="{{categories.image}}">
                        </div>
                        <div class="form-group row">
                            <label for="example-textarea">
                                Mô tả Thể Loại
                            </label>
                            <div>
                                <textarea name="description" class="form-control" rows="5"
                                    id="example-textarea">{{categories.description}}</textarea>
                            </div>
                        </div>
                        <fieldset class="form-group">
                            <label for="exampleSelect1">Tình trạng</label>
                            <select class="form-control" name="status" id="eexampleSelect11">
                                {{#if (eq categories.status 1)}}
                                <option selected value="1">Kích hoạt</option>
                                </option>
                                <option value="0">Chưa Kích Hoạt</option>
                                {{else}}
                                <option value="1">Kích hoạt</option>
                                </option>
                                <option selected value="0">Chưa Kích Hoạt</option>
                                {{/if}}
                            </select>
                        </fieldset>
                        <button type="submit" class=" mt-4 btn btn-primary">Cập nhật tài khoản</button>
                    </form>
                </div>

            </div>
            <!-- end row -->
        </div>
        <!-- end container-fluid -->
    </div>
    <!-- end content -->

</div>
<!-- END content-page -->