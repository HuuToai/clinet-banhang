<div class="content-page">
    <div class="content">

        <!-- Start container-fluid -->
        <div class="container-fluid">
            <!-- row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="mt-5">
                        <h5 class="font-14">Danh sách đơn hàng</h5>
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Mã đơn hàng</th>
                                        <th>Tên người nhận</th>
                                        <th>SĐT </th>
                                        <th>Địa chỉ</th>
                                        <th>Trạng thái</th>
                                        <th>Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each orderitems }}

                                    <tr>
                                        <th scope="row">{{sum @index 1}}</th>
                                        <td>{{this.order_code}}</td>
                                        <td>{{this.order_name}}</td>
                                        <td>{{this.order_sdt}}</td>
                                        <td>{{this.order_address}}</td>

                                        <td>
                                            {{#if (eq this.order_status 1)}}
                                            <span class="text text-primary">Đang Chờ Xử Lý</span>
                                            {{else if (eq this.order_status 2)}}
                                            <span class="text text-success">Đã Giao Hàng</span>
                                            {{else}}
                                            <span class="text text-danger">Đã Hủy</span>
                                            {{/if}}
                                        </td>
                                        <td>
                                            <a href="/{{this.order_code}}/viewDetailhistory?q={{this.order_id}}"
                                                className="btn btn-link">Chi
                                                tiết
                                                đơn hàng</a>
                                        </td>
                                    </tr>
                                    {{else}}
                                    <tr>
                                        <td colSpan="5">Bạn chưa có đơn hàng nào
                                            <a href="/shop">Tiếp tục mua sắm
                                            </a>
                                        </td>
                                        {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- end row -->
        </div>
        <!-- end container-fluid -->
    </div>
    <!-- end content -->

</div>
<!-- END content-page -->

</div>