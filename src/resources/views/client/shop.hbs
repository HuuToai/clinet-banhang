<form name="add-to-cart-form" method="get">
</form>



<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            {{#each products}}
            <!-- Start Column 1 -->
            <div class="col-12 col-md-4 col-lg-3 mb-5">
                <a class="product-item" href="/{{this.id}}/product_detail">
                    <img src="{{ window.location.origin }}/uploads/products/{{this.image}}"
                        class="img-fluid product-thumbnail">
                    <h3 class="product-title">{{this.name}}</h3>
                    <strong class="product-price">{{this.price}} VNĐ</strong>
                    <div class="product " data-product-id="{{this.id}}">
                        <span class="icon-cross" onclick="addToCart('{{this.id}}')">
                            <img src="/client/images/cross.svg" class="img-fluid">
                        </span>
                    </div>
                </a>
            </div>
            <!-- End Column 1 -->
            {{/each}}

        </div>
    </div>
</div>


<script>
    var addtocartform = document.forms['add-to-cart-form'];

    function addToCart(productId) {

        addtocartform.action = '/' + productId + '/product_detail/';//set thêm action cho form
        addtocartform.submit();
    }
</script>