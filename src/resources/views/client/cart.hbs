<div class="untree_co-section before-footer-section">
    <div class="container">
        <div class="row mb-5">
            <form action="/update-cart-item" class="col-md-12" method="post">
                <div class="site-blocks-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="product-stt">STT</th>
                                <th class="product-thumbnail">Ảnh</th>
                                <th class="product-name">Tên sản phẩm</th>
                                <th class="product-price">Giá</th>
                                <th class="product-quantity">Số lượng</th>
                                <th class="product-total">Thành tiền</th>
                                <th class="product-remove">Remove</th>
                            </tr>
                        </thead>
                        <tbody>


                            {{#each cartItems}}

                            <tr>
                                <th scope="row">{{sum @index 1}}</th>
                                <td class="product-thumbnail">
                                    <img src="{{ window.location.origin }}/uploads/products/{{this.productImage}}"
                                        alt="Image" class="img-fluid">
                                </td>
                                <td class="product-name">
                                    <h2 class="h5 text-black">{{this.productName}}</h2>
                                </td>
                                <td>{{formatPrice this.price}} </td>
                                <td>
                                    <div class="input-group mb-3 d-flex align-items-center quantity-container"
                                        style="max-width: 120px;">
                                        {{!-- <div class="input-group-prepend">
                                            <button class="btn btn-outline-black decrease"
                                                type="button">&minus;</button>
                                        </div> --}}
                                        <input name="quantity" type="number"
                                            class="form-control text-center quantity-amount" id="inputMax"
                                            value="{{this.quantity}}" min="1" max="{{this.productquantity}}"
                                            placeholder="" aria-label="Example text with button addon"
                                            aria-describedby="button-addon1">
                                        {{!-- <div class="input-group-append">
                                            <button class="btn btn-outline-black increase" type="button">&plus;</button>
                                        </div> --}}
                                    </div>

                                </td>
                                <input type="text" value="{{this.productId}}" name="product_id" hidden>
                                <td>{{formatPrice this.itemTotal}}</td>
                                <td>
                                    <a href="/{{this.productId}}/delete-item-cart" class="btn btn-black btn-sm"><i
                                            class="fas fa-times"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <p>Tổng tiền: {{formatPrice total}}</p>
                </div>
                <div class="col-md-6 mb-3 mb-md-0">
                    <button class="btn btn-black btn-sm btn-block">Cập nhật giỏ hàng</button>
                </div>
            </form>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="row mb-5">
                    <form action="/delete-cart" method="get">
                        <div class="col-md-6">
                            <button class="btn btn-outline-black btn-sm btn-block">Xóa toàn bộ giỏ hàng</button>
                        </div>
                    </form>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <label class="text-black h4" for="coupon">Coupon</label>
                        <p>Enter your coupon code if you have one.</p>
                    </div>
                    <div class="col-md-8 mb-3 mb-md-0">
                        <input type="text" class="form-control py-3" id="coupon" placeholder="Coupon Code">
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-black">Apply Coupon</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 pl-5">
                <div class="row justify-content-end">
                    <div class="col-md-7">
                        <div class="row">
                            <div class="col-md-12 text-right border-bottom mb-5">
                                <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-6">
                                <span class="text-black">Tổng sản phẩm</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">{{totalQuantity}}</strong>
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-6">
                                <span class="text-black">Tổng tiền</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">{{formatPrice total}}</strong>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <button class="btn btn-black btn-lg py-3 btn-block"
                                    onclick="window.location='/checkout'">Thanh toán</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>